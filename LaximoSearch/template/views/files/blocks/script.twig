{% block script %}
    <script type="text/javascript">
        var dropArea = document.getElementById('drop-area');
        var charset = document.getElementById('charset');
        var delimiter = document.getElementById('delimiter');

        if (dropArea) {
            jQuery().filesHelper('init',
                {
                    uploadFileUrl: '{{ createUrl('files', 'load')|e('js') }}',
                    dropArea: dropArea,
                    charset: charset,
                    delimiter: delimiter,
                    activeIconTemplate: '<i class="fas fa-check" style="color: green"></i>'
                }
            );
        }
    </script>
{% endblock %}